<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context="com.londonappbrewery.iampoor.MainActivity">

    <TextView
        android:id="@+id/text_i_am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="80dp"
        android:fontFamily="casual"
        android:text="@string/i_am"
        android:textColor="@android:color/black"
        android:textSize="50sp"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/image_coal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="125dp"
        app:srcCompat="@drawable/coal" />

    <TextView
        android:id="@+id/text_poor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginRight="80dp"
        android:layout_alignParentRight="true"
        android:fontFamily="casual"
        android:text="@string/poor"
        android:textColor="@android:color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

</RelativeLayout>
